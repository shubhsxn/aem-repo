<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Right Rail Linked List"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Right Rail Linked List"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <listTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter List Title"
                                fieldLabel="List Title"
                                maxlength="{Long}40"
                                name="./listTitle"
                                required="{Boolean}true"/>
                            <linkListType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-custom-dropdown-showhide linklisttype"
                                cq-dialog-dropdown-showhide-target=".linklisttype-option-listtype-showhide-target"
                                fieldLabel="Link List type"
                                name="./linkListType"
                                required="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <feed
                                        jcr:primaryType="nt:unstructured"
                                        selected="true"
                                        text="Feed"
                                        value="feed"/>
                                    <featured
                                        jcr:primaryType="nt:unstructured"
                                        text="Featured"
                                        value="featured"/>
                                </items>
                            </linkListType>
                            <setFeedAttr
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="linklisttype-option-listtype-showhide-target foundation-layout-util-vmargin"
                                showhidecustomtargetvalue="feed">
                                <items jcr:primaryType="nt:unstructured">
                                    <articleType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        emptyText="Select"
                                        fieldLabel="Select Article Type"
                                        multiple="{Boolean}true"
                                        name="./articleType">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="corteva/components/content/DataSource/ArticleTypeList"/>
                                    </articleType>
                                    <articleTopics
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldLabel="Article Topics">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                            name="./articleTopics">
                                            <items jcr:primaryType="nt:unstructured">
                                                <articleFacet
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    emptyText="Select"
                                                    fieldLabel="Select Article Facet"
                                                    name="./articleFacet"
                                                    required="{Boolean}true">
                                                    <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="corteva/components/content/DataSource/FacetTypeList"/>
                                                </articleFacet>
                                                <facetTags
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                                    allowBulkEdit="{Boolean}true"
                                                    autocreateTag="{Boolean}true"
                                                    fieldDescription="Please select child tags from the selected facet."
                                                    fieldLabel="Facet Tags"
                                                    multiple="{Boolean}true"
                                                    name="./cq:facetTags"
                                                    required="true"
                                                    rootPath="/etc/tags/corteva"/>
                                            </items>
                                        </field>
                                    </articleTopics>
                                    <intraFacetLogicalOperation
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Logical operation within Facets in Article Topics taxonomy"
                                        name="./intraFacetLogicalOperation"
                                        required="{Boolean}true"
                                        value="">
                                        <items jcr:primaryType="nt:unstructured">
                                            <or
                                                jcr:primaryType="nt:unstructured"
                                                text="OR"
                                                value="or"/>
                                            <and
                                                jcr:primaryType="nt:unstructured"
                                                text="AND"
                                                value="and"/>
                                        </items>
                                    </intraFacetLogicalOperation>
                                    <interFacetLogicalOperation
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Logical operation across Facets in Article Topics taxonomy"
                                        name="./interFacetLogicalOperation"
                                        required="{Boolean}true"
                                        value="">
                                        <items jcr:primaryType="nt:unstructured">
                                            <and
                                                jcr:primaryType="nt:unstructured"
                                                text="AND"
                                                value="and"/>
                                            <or
                                                jcr:primaryType="nt:unstructured"
                                                text="OR"
                                                value="or"/>
                                        </items>
                                    </interFacetLogicalOperation>
                                    <noOfArticle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                        class="isMandatory"
                                        cq-msm-lockable="ranking"
                                        defaultValue="4"
                                        fieldLabel="Number Of Articles Displayed"
                                        name="./noofArticlesDisplayed"
                                        required="{Boolean}true"/>
                                </items>
                            </setFeedAttr>
                            <setFeaturedAttr
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="linklisttype-option-listtype-showhide-target foundation-layout-util-vmargin"
                                showhidecustomtargetvalue="featured">
                                <items jcr:primaryType="nt:unstructured">
                                    <articlePagePaths
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/multifield"
                                        fieldLabel="Article Pages Path">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                            acs-commons-nested=""
                                            name="./articlePagePaths">
                                            <layout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                method="absolute"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <articlePagePath
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="corteva/components/content/contextualpathbrowser"
                                                            class="isMandatory"
                                                            contentRootPath="/content/corteva"
                                                            fieldLabel="Article Page Path"
                                                            name="./articlePagePath"
                                                            required="{Boolean}true"
                                                            rootPath=""/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </articlePagePaths>
                                </items>
                            </setFeaturedAttr>
                            <displayDate
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}false"
                                fieldDescription="Show Date"
                                name="./displayDate"
                                text="Show Date"
                                uncheckedValue="false"
                                value="true"/>
                            <displayArticleType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}false"
                                fieldDescription="Show Article Type"
                                name="./displayArticleType"
                                text="Show Article Type"
                                uncheckedValue="false"
                                value="true"/>
                        </items>
                    </columns>
                </items>
            </tab1>
        </items>
    </content>
</jcr:root>
