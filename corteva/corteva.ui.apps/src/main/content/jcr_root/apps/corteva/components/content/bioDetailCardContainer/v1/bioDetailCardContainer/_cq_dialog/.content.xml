<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Leadership Filter"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Leadership Filter"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <folderPath
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="corteva/components/content/contextualpathbrowser"
                                contentRootPath="/content"
                                fieldDescription="Select Biography Detail Folder Path"
                                fieldLabel="Biography Detail Page Folder Path"
                                name="./folderPath"
                                required="true"/>
                            <displayDropDown
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                class="isMandatoryCheck"
                                defaultChecked="{Boolean}true"
                                fieldDescription="Display DropDown in View"
                                name="./displayDropDown"
                                text="Show Filter DropDown"
                                uncheckedValue="false"
                                value="true"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                class="isMandatoryCheckInp"
                                fieldDescription="Enter Dropdown Label"
                                fieldLabel="Dropdown Label"
                                maxlength="{Long}30"
                                name="./dropdownLabel"
                                required="{Boolean}true"/>
                            <hideAllDropdownField
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                class="isMandatoryCheck"
                                defaultChecked="{Boolean}false"
                                fieldDescription="Hide All in Dropdown?"
                                name="./hideallInDropDown"
                                text="Hide All Filter in DropDown?"
                                uncheckedValue="false"
                                value="true"/>
			    <rowType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-custom-dropdown-showhide rowType"
                                cq-dialog-dropdown-showhide-target=".rowType-option-listtype-showhide-target"
                                fieldDescription="Select the Row Type."
                                fieldLabel="Row Type"
                                name="./rowType"
                                value="">
                                <items jcr:primaryType="nt:unstructured">
                                    <FourInRow
                                        jcr:primaryType="nt:unstructured"
                                        name="./rowType"
                                        text="Four Across"
                                        value="FourAcross"/>
                                    <ThreeInRow
                                        jcr:primaryType="nt:unstructured"
                                        name="./rowType"
                                        text="Three Across"
                                        value="ThreeAcross"/>
                                </items>
                            </rowType>
                        </items>
                    </columns>
                </items>
            </tab1>
        </items>
    </content>
</jcr:root>
