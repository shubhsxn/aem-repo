<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Cards Container"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Cards Container Settings"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured"> 
							<cardType
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/select"
								fieldDescription="Select the Card Type."
								fieldLabel="Select the Card Type"
								class="cq-dialog-custom-dropdown-showhide cardType"
                                cq-dialog-dropdown-showhide-target=".cardType-option-listtype-showhide-target"
								name="./cardType"
								value="">
								<items jcr:primaryType="nt:unstructured">
									<primaryCard
										jcr:primaryType="nt:unstructured"
										text="Primary Card View"
										value="primaryCard"/>
									<callToActionCard
										jcr:primaryType="nt:unstructured"
										text="Call To Action Card View"
										value="callToActionCard"/>
									<relatedContentCard
										jcr:primaryType="nt:unstructured"
										text="Related Content Card View"
										value="relatedContentCard"/>
									<relatedContentFullWidthCard
										jcr:primaryType="nt:unstructured"
										text="Related Content Full Width Card View"
										value="relatedContentFullWidthCard"/>
									<featureCard
										jcr:primaryType="nt:unstructured"
										text="Feature Card View"
										value="featureCard"/>
                                    <responsiveCard
										jcr:primaryType="nt:unstructured"
										text="Responsive Card View"
										value="responsiveCard"/>
								</items>
							</cardType>
							<mandatoryTitleSection
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="cardType-option-listtype-showhide-target foundation-layout-util-vmargin"
                                showhidecustomtargetvalue="primaryCard, callToActionCard, relatedContentCard, relatedContentFullWidthCard, responsiveCard">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        class="isMandatory"
                                        fieldDescription="Container Title"
                                        fieldLabel="Container Title"
                                        maxlength="{Long}130"
                                        name="./title"
                                        required="{Boolean}true"/>
                                </items>
                            </mandatoryTitleSection>
                            <optionalTitleSection
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="cardType-option-listtype-showhide-target foundation-layout-util-vmargin"
                                showhidecustomtargetvalue="featureCard">
                                <items jcr:primaryType="nt:unstructured">
                                    <optionalTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldDescription="Container Title"
                                        fieldLabel="Container Title"
                                        maxlength="{Long}130"
                                        name="./optionalTitle"/>
                                </items>
                            </optionalTitleSection>
                            <buttonSection
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="cardType-option-listtype-showhide-target foundation-layout-util-vmargin"
                                showhidecustomtargetvalue="relatedContentCard, relatedContentFullWidthCard">
                                <items jcr:primaryType="nt:unstructured">
                                    <buttonText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/include"
                                        path="/apps/corteva/components/content/commonElements/button/buttontext"/>
                                    <buttonLink
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/include"
                                        path="/apps/corteva/components/content/commonElements/button/buttonlink"/>
                                    <buttonAction
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/include"
                                        path="/apps/corteva/components/content/commonElements/button/buttonAction"/>
                                </items>
                            </buttonSection>
                            <bodyTextSection
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="cardType-option-listtype-showhide-target foundation-layout-util-vmargin"
                                showhidecustomtargetvalue="primaryCard, callToActionCard, featureCard, responsiveCard">
                                <items jcr:primaryType="nt:unstructured">
                                    <bodyText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        fieldLabel="Body Text"
                                        name="./bodyText"
                                        useFixedInlineToolbar="{Boolean}true">
                                        <rtePlugins jcr:primaryType="nt:unstructured">
                                            <format
                                                jcr:primaryType="nt:unstructured"
                                                features="*"/>
                                            <justify
                                                jcr:primaryType="nt:unstructured"
                                                features="*"/>
                                            <lists
                                                jcr:primaryType="nt:unstructured"
                                                features="*"/>
                                            <paraformat
                                                jcr:primaryType="nt:unstructured"
                                                features="*"/>
                                            <links
                                                jcr:primaryType="nt:unstructured"
                                                features="*"/>
                                            <image
                                                jcr:primaryType="nt:unstructured"
                                                features="*"/>
                                            <findreplace
                                                jcr:primaryType="nt:unstructured"
                                                features="*"/>
                                            <subsuperscript
                                                jcr:primaryType="nt:unstructured"
                                                features="*"/>
                                            <spellcheck
                                                jcr:primaryType="nt:unstructured"
                                                features="*"/>
                                            <misctools
                                                jcr:primaryType="nt:unstructured"
                                                features="*">
                                                <specialCharsConfig jcr:primaryType="nt:unstructured">
                                                    <chars jcr:primaryType="nt:unstructured">
                                                        <copyright
                                                            jcr:primaryType="nt:unstructured"
                                                            entity="&amp;#169;"/>
                                                        <trademark
                                                            jcr:primaryType="nt:unstructured"
                                                            entity="&amp;#8482;"/>
                                                        <registered
                                                            jcr:primaryType="nt:unstructured"
                                                            entity="&amp;#174;"/>
                                                        <emDash
                                                            jcr:primaryType="nt:unstructured"
                                                            entity="&amp;#8212;"/>
                                                        <pound
                                                            jcr:primaryType="nt:unstructured"
                                                            entity="&amp;#163;"/>
                                                        <nbsp
                                                            jcr:primaryType="nt:unstructured"
                                                            entity="&amp;#160;"/>
                                                    </chars>
                                                </specialCharsConfig>
                                            </misctools>
                                            <styles
                                                jcr:primaryType="nt:unstructured"
                                                features="*">
                                                <styles jcr:primaryType="nt:unstructured">
                                                    <plainSpan
                                                        jcr:primaryType="nt:unstructured"
                                                        cssName="defaultSpan"
                                                        text="Default (add span tag)"/>
                                                    <lead
                                                        jcr:primaryType="nt:unstructured"
                                                        cssName="lead"
                                                        text="Lead"/>
                                                </styles>
                                            </styles>
                                            <table
                                                jcr:primaryType="nt:unstructured"
                                                features="*"/>
                                        </rtePlugins>
                                        <uiSettings jcr:primaryType="nt:unstructured">
                                            <cui jcr:primaryType="nt:unstructured">
                                                <inline
                                                    jcr:primaryType="nt:unstructured"
                                                    toolbar="[format#bold,format#italic,format#underline,#justify,#lists,subsuperscript#subscript,subsuperscript#superscript,links#modifylink,links#unlink,links#anchor,#image,findreplace#find,findreplace#replace,spellcheck#checktext,misctools#specialchars,misctools#sourceedit,#styles,#paraformat,table#table]">
                                                    <popovers jcr:primaryType="nt:unstructured">
                                                        <justify
                                                            jcr:primaryType="nt:unstructured"
                                                            items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                                                            ref="justify"/>
                                                        <lists
                                                            jcr:primaryType="nt:unstructured"
                                                            items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                                                            ref="lists"/>
                                                        <paraformat
                                                            jcr:primaryType="nt:unstructured"
                                                            items="paraformat:getFormats:paraformat-pulldown"
                                                            ref="paraformat"/>
                                                        <styles
                                                            jcr:primaryType="nt:unstructured"
                                                            items="styles:getStyles:styles-pulldown"
                                                            ref="styles"/>
                                                    </popovers>
                                                </inline>
                                            </cui>
                                        </uiSettings>
										<htmlRules jcr:primaryType="nt:unstructured">
                                       <docType jcr:primaryType="nt:unstructured">
                                           <typeConfig
                                                 jcr:primaryType="nt:unstructured"
                                                 useSemanticMarkup="{Boolean}true">
                                                 <semanticMarkupMap
                                                     jcr:primaryType="nt:unstructured"
                                                     b="strong"
													 i="em"/>
                                            </typeConfig>
                                        </docType>
                                </htmlRules>
                                    </bodyText>
                                </items>
                            </bodyTextSection>
							<bgColorSection
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="cardType-option-listtype-showhide-target foundation-layout-util-vmargin"
                                showhidecustomtargetvalue="primaryCard, callToActionCard">
                                <items jcr:primaryType="nt:unstructured">
                                    <bgColor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldDescription="Select the Background Color."
                                        fieldLabel="Select the Background Color"
                                        name="./bgColor"
                                        value="">
                                        <items jcr:primaryType="nt:unstructured">
                                            <blue
                                                jcr:primaryType="nt:unstructured"
                                                text="Blue"
                                                value="blue"/>
                                            <green
                                                jcr:primaryType="nt:unstructured"
                                                text="Green"
                                                value="green"/>
                                            <orange
                                                jcr:primaryType="nt:unstructured"
                                                text="Orange"
                                                value="orange"/>
											<maroon
                                                jcr:primaryType="nt:unstructured"
                                                text="Maroon"
                                                value="maroon"/>	
                                        </items>
                                    </bgColor>
                                </items>
                            </bgColorSection>
							<setPrimaryCard
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="cardType-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="primaryCard">
								<items jcr:primaryType="nt:unstructured">
									<primaryCardPaths
                              			jcr:primaryType="nt:unstructured"
                                		sling:resourceType="granite/ui/components/foundation/form/multifield"
                                		fieldLabel="Primary Card Paths"
                                        maxItems="3"
										minItems="2">
                                		<field
                                    		jcr:primaryType="nt:unstructured"
                                    		sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    		acs-commons-nested=""
                                    		name="./primaryCardPaths">
                                    		<layout
                                        		jcr:primaryType="nt:unstructured"
                                        		sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        		method="absolute"/>
                                    		<items jcr:primaryType="nt:unstructured">
                                        		<column
                                            		jcr:primaryType="nt:unstructured"
                                            		sling:resourceType="granite/ui/components/foundation/container">
                                            		<items jcr:primaryType="nt:unstructured">
                                                		<primaryCardPath
                                                    		jcr:primaryType="nt:unstructured"
                                                    		sling:resourceType="corteva/components/content/contextualpathbrowser"
                                                    		fieldLabel="Primary Card Path"
                                                    		class="expfragPath"
                                                    		name="./primaryCardPath"
                                                    		required="{Boolean}true"
                                                    		cardView="primaryCard"
                                                    		rootPath=""/>
                                            		</items>
                                        		</column>
                                    		</items>
                                		</field>
                            		</primaryCardPaths>
                            	</items>
                            </setPrimaryCard>
                            <setCallToActionCard
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="cardType-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="callToActionCard">
								<items jcr:primaryType="nt:unstructured">
									<ctaCardPaths
                              			jcr:primaryType="nt:unstructured"
                                		sling:resourceType="granite/ui/components/foundation/form/multifield"
                                		fieldLabel="Call To Action Card Paths"
                                        maxItems="3">
                                		<field
                                    		jcr:primaryType="nt:unstructured"
                                    		sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    		acs-commons-nested=""
                                    		name="./ctaCardPaths">
                                    		<layout
                                        		jcr:primaryType="nt:unstructured"
                                        		sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        		method="absolute"/>
                                    		<items jcr:primaryType="nt:unstructured">
                                        		<column
                                            		jcr:primaryType="nt:unstructured"
                                            		sling:resourceType="granite/ui/components/foundation/container">
                                            		<items jcr:primaryType="nt:unstructured">
                                                		<ctaCardPath
                                                    		jcr:primaryType="nt:unstructured"
                                                    		sling:resourceType="corteva/components/content/contextualpathbrowser"
                                                    		fieldLabel="Call To Action Card Path"
                                                    		class="expfragPath"
                                                    		name="./ctaCardPath"
                                                    		required="{Boolean}true"
                                                    		cardView="callToActionCard"
                                                    		rootPath=""/>
                                            		</items>
                                        		</column>
                                    		</items>
                                		</field>
                            		</ctaCardPaths>
                            	</items>
                            </setCallToActionCard>
                            <setRelatedContentCard
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="cardType-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="relatedContentCard">
								<items jcr:primaryType="nt:unstructured">
									<relatedContentCardPaths
                              			jcr:primaryType="nt:unstructured"
                                		sling:resourceType="granite/ui/components/foundation/form/multifield"
                                		fieldLabel="Related Content Card Paths"
                                        maxItems="3">
                                		<field
                                    		jcr:primaryType="nt:unstructured"
                                    		sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    		acs-commons-nested=""
                                    		name="./relatedContentCardPaths">
                                    		<layout
                                        		jcr:primaryType="nt:unstructured"
                                        		sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        		method="absolute"/>
                                    		<items jcr:primaryType="nt:unstructured">
                                        		<column
                                            		jcr:primaryType="nt:unstructured"
                                            		sling:resourceType="granite/ui/components/foundation/container">
                                            		<items jcr:primaryType="nt:unstructured">
                                                		<relatedContentCardPath
                                                    		jcr:primaryType="nt:unstructured"
                                                    		sling:resourceType="corteva/components/content/contextualpathbrowser"
                                                    		fieldLabel="Related Content Card Path"
                                                    		class="expfragPath"
                                                    		name="./relatedContentCardPath"
                                                    		required="{Boolean}true"
                                                    		cardView="relatedContentCard"
                                                    		rootPath=""/>
                                            		</items>
                                        		</column>
                                    		</items>
                                		</field>
                            		</relatedContentCardPaths>
                            	</items>
                            </setRelatedContentCard>
                            <setRelatedContentFullWidthCard
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="cardType-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="relatedContentFullWidthCard">
								<items jcr:primaryType="nt:unstructured">
									<relatedContentFullWidthCardPaths
                              			jcr:primaryType="nt:unstructured"
                                		sling:resourceType="granite/ui/components/foundation/form/multifield"
                                		fieldLabel="Related Content Full Width Card Paths"
                                        maxItems="3">
                                		<field
                                    		jcr:primaryType="nt:unstructured"
                                    		sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    		acs-commons-nested=""
                                    		name="./relatedContentFullWidthCardPaths">
                                    		<layout
                                        		jcr:primaryType="nt:unstructured"
                                        		sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        		method="absolute"/>
                                    		<items jcr:primaryType="nt:unstructured">
                                        		<column
                                            		jcr:primaryType="nt:unstructured"
                                            		sling:resourceType="granite/ui/components/foundation/container">
                                            		<items jcr:primaryType="nt:unstructured">
                                                		<relatedContentFullWidthCardPath
                                                    		jcr:primaryType="nt:unstructured"
                                                    		sling:resourceType="corteva/components/content/contextualpathbrowser"
                                                    		fieldLabel="Related Content Full Width Card Path"
                                                    		class="expfragPath"
                                                    		name="./relatedContentFullWidthCardPath"
                                                    		required="{Boolean}true"
                                                    		cardView="relatedContentFullWidthCard"
                                                    		rootPath=""/>
                                            		</items>
                                        		</column>
                                    		</items>
                                		</field>
                            		</relatedContentFullWidthCardPaths>
                            	</items>
                            </setRelatedContentFullWidthCard>
							<setFeatureCard
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="cardType-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="featureCard">
								<items jcr:primaryType="nt:unstructured">
									<featureCardPaths
                              			jcr:primaryType="nt:unstructured"
                                		sling:resourceType="granite/ui/components/foundation/form/multifield"
                                		fieldLabel="Feature Card Paths"
                                        minItems="2"
                                        maxItems="2">
                                		<field
                                    		jcr:primaryType="nt:unstructured"
                                    		sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    		acs-commons-nested=""
                                    		name="./featureCardPaths">
                                    		<layout
                                        		jcr:primaryType="nt:unstructured"
                                        		sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        		method="absolute"/>
                                    		<items jcr:primaryType="nt:unstructured">
                                        		<column
                                            		jcr:primaryType="nt:unstructured"
                                            		sling:resourceType="granite/ui/components/foundation/container">
                                            		<items jcr:primaryType="nt:unstructured">
                                                		<featureCardPath
                                                    		jcr:primaryType="nt:unstructured"
                                                    		sling:resourceType="corteva/components/content/contextualpathbrowser"
                                                    		fieldLabel="Feature Card Path"
                                                    		class="expfragPath"
                                                    		name="./featureCardPath"
                                                    		required="{Boolean}true"
                                                    		cardView="featureCard"
                                                    		rootPath=""/>
                                            		</items>
                                        		</column>
                                    		</items>
                                		</field>
                            		</featureCardPaths>
                            	</items>
                            </setFeatureCard>
                            <setResponsiveCard
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="cardType-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="responsiveCard">
								<items jcr:primaryType="nt:unstructured">
									<responsiveCardPaths
                              			jcr:primaryType="nt:unstructured"
                                		sling:resourceType="granite/ui/components/foundation/form/multifield"
                                		fieldLabel="Responsive Card Paths"
                                        minItems="3">
                                		<field
                                    		jcr:primaryType="nt:unstructured"
                                    		sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    		acs-commons-nested=""
                                    		name="./responsiveCardPaths">
                                    		<layout
                                        		jcr:primaryType="nt:unstructured"
                                        		sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        		method="absolute"/>
                                    		<items jcr:primaryType="nt:unstructured">
                                        		<column
                                            		jcr:primaryType="nt:unstructured"
                                            		sling:resourceType="granite/ui/components/foundation/container">
                                            		<items jcr:primaryType="nt:unstructured">
                                                		<responsiveCardPath
                                                    		jcr:primaryType="nt:unstructured"
                                                    		sling:resourceType="corteva/components/content/contextualpathbrowser"
                                                    		fieldLabel="Responsive Card Path"
                                                    		class="expfragPath"
                                                    		name="./responsiveCardPath"
                                                    		required="{Boolean}true"
                                                    		cardView="responsiveCard"
                                                    		rootPath=""/>
                                            		</items>
                                        		</column>
                                    		</items>
                                		</field>
                            		</responsiveCardPaths>
                            	</items>
                            </setResponsiveCard>
                            <cardResourceHidden
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                class="componentHidden"
                                name="./cardResourceHidden"/>
						</items>
                    </columns>
                </items>
            </tab1>
        </items>
    </content>
</jcr:root>
