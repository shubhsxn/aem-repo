<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Footer"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <footer
                jcr:primaryType="nt:unstructured"
                jcr:title="Footer"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <logoHomePageUrl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="corteva/components/content/contextualpathbrowser"
                                fieldDescription="Enter Logo Url."
                                fieldLabel="Logo Link To"
                                name="./logoUrl"
                                required="{Boolean}true"
                                contentRootPath="/content"/>
                            <setLogoImage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                assetfieldstobepopulated="\{&quot;logoAltText&quot;:&quot;./logoImgAltText&quot;}"
                                class="assetMetadataClass">
                                <items jcr:primaryType="nt:unstructured">
                                    <logoImageSrc
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="corteva/components/content/contextualpathbrowser"
                                        fieldDescription="Browse Logo image"
                                        fieldLabel="Logo Image"
                                        name="./logoImage"
                                        required="{Boolean}true"
                                        contentRootPath="/content/dam/dpagco"/>
                                    <logoImgAltText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Provide Alt Text for Logo image."
                                        fieldLabel="Logo Image Alt Text"
                                        name="./logoImgAltText"/>
                                </items>
                            </setLogoImage>
                            <socialSection
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter Social Icon Section Text"
                                fieldLabel="Social Section Text"
                                maxlength="{Long}25"
                                name="./socialText"
                                required="{Boolean}true"/>
                            <bodytext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/include"
                                path="/apps/corteva/components/content/commonElements/text/teasertext"/>
                            <socialselect
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                class="cq-dialog-dropdown-showhide"
                                cq-dialog-dropdown-showhide-target=".socialIcon-option-listtype-showhide-target"
                                fieldDescription="Social Icon Display"
                                fieldLabel="Social Icon Display"
                                name="./socialSel"
                                value="">
                                <items jcr:primaryType="nt:unstructured">
                                    <option1
                                        jcr:primaryType="nt:unstructured"
                                        text="Yes"
                                        value="yes"/>
                                    <option2
                                        jcr:primaryType="nt:unstructured"
                                        text="No"
                                        value="no"/>
                                </items>
                            </socialselect>
                            <setSocialyes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="socialIcon-option-listtype-showhide-target foundation-layout-util-vmargin"
                                showhidetargetvalue="yes">
                                <items jcr:primaryType="nt:unstructured">
                                    <socialLinks
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/multifield"
                                        class="full-width"
                                        fieldDescription="Click '+' to add a new page"
                                        fieldLabel="Social Links"
                                        maxItems="6">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                            acs-commons-nested=""
                                            name="./socialLinks">
                                            <layout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                method="absolute"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <iconLabel
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldDescription="Enter Social Icon Label"
                                                            fieldLabel="Social Icon Label"
                                                            maxlength="{Long}15"
                                                            name="./iconLabel"
                                                            required="{Boolean}true"/>
                                                        <iconImage
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="corteva/components/content/contextualpathbrowser"
                                                            fieldDescription="Select Image Path"
                                                            fieldLabel="Icon Image"
                                                            name="./iconImage"
                                                            required="{Boolean}true"
                                                            contentRootPath="/content/dam/dpagco"/>
                                                        <iconLink
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldDescription="Enter Social Icon Link"
                                                            fieldLabel="Social Icon Link"
                                                            name="./iconLink"
                                                            required="{Boolean}true"/>
                                                        <iconAlt
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldDescription="Icon Alt Text"
                                                            fieldLabel="Icon Alt Text"
                                                            maxlength="{Long}100"
                                                            name="./iconAlt"
                                                            required="{Boolean}true"/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </socialLinks>
                                </items>
                            </setSocialyes>
                        </items>
                    </columns>
                </items>
            </footer>
        </items>
    </content>
</jcr:root>
