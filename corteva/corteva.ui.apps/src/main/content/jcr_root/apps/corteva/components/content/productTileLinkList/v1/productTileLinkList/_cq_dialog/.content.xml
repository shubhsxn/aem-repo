<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Product Tile Link List"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container"
        class="product-tile">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Image Blocks"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <showImageLogoSection
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                class="isMandatoryCheck"
                                defaultChecked="{Boolean}true"
                                ignoreData="{Boolean}false"
                                name="./showImageLogoSection"
                                requiredtocheck="displayImageBlock"
                                text="Show Image Logo section"
                                uncheckedValue="false"
                                value="true"/>
                            <imageBlockTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter Image Block Title"
                                fieldLabel="Image Block Title"
                                maxlength="{Long}20"
                                name="./imageBlockTitle"
                                requiredtocheck="displayImageBlock"/>
                            <imageBlock
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                fieldLabel="Image Blocks"
                                maxItems="4"
                                minItems="1"
                                requiredtocheck="displayImageBlock">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested=""
                                    name="./imageBlocks">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container"
                                            assetfieldstobepopulated="\{&quot;logoAltText&quot;:&quot;./logoAltText&quot;}"
                                            class="assetMetadataClass">
                                            <items jcr:primaryType="nt:unstructured">
                                                <imageLogo
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="corteva/components/content/contextualpathbrowser"
                                                    class="isMandatory"
                                                    contentRootPath="/content/dam/dpagco"
                                                    fieldDescription="Insert Image Logo"
                                                    fieldLabel="Image Logo"
                                                    name="./imageLogo"
                                                    required="{Boolean}true"
                                                    requiredtocheck="displayImageBlock"/>
                                                <logoAltText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Enter Logo Alt Text"
                                                    fieldLabel="Logo Alt Text"
                                                    maxlength="{Long}100"
                                                    name="./logoAltText"/>
                                                <imageLogoUrl
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="corteva/components/content/contextualpathbrowser"
                                                    contentRootPath="/content"
                                                    fieldDescription="Enter Image Logo Destination URL"
                                                    fieldLabel="Image Logo Destination Url"
                                                    name="./imageLogoUrl"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </imageBlock>
                        </items>
                    </columns>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="nt:unstructured"
                jcr:title="Resources"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <resourceSectionLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                class="isMandatory"
                                fieldDescription="Enter Resource Section Label"
                                fieldLabel="Resource Section Label"
                                maxlength="{Long}40"
                                name="./resourceSectionLabel"
                                required="{Boolean}true"/>
                            <resourceSectionDescription
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter Resource Section Description"
                                fieldLabel="Resource Section Description"
                                name="./resourceSectionDescription"/>
                            <resourceSectionLinks
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                fieldLabel="Add Resource Links"
                                minItems="1"
                                required="{Boolean}true">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested=""
                                    name="./resourceSectionLinks">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <resourceType
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    class="isMandatory"
                                                    deleteHint="{Boolean}false"
                                                    fieldDescription="Select the resource link type"
                                                    fieldLabel="Resource Link Type"
                                                    name="./resourceLinkType"
                                                    required="{Boolean}true"
                                                    value="">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <internal
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Internal Link"
                                                            value="internal"/>
                                                        <external
                                                            jcr:primaryType="nt:unstructured"
                                                            text="External Link"
                                                            value="external"/>
                                                        <download
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Download Link"
                                                            value="download"/>
                                                    </items>
                                                </resourceType>
                                                <resourceLabel
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    class="isMandatory"
                                                    fieldDescription="Enter Resource Link Label"
                                                    fieldLabel="Resource Link Label"
                                                    maxlength="{Long}40"
                                                    name="./resourceLinkLabel"
                                                    required="{Boolean}true"/>
                                                <destinationUrl
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    class="isMandatory"
                                                    fieldDescription="Enter Resource Link Destination URL"
                                                    fieldLabel="Resource Link Destination URL"
                                                    name="./resourceLinkDestinationUrl"
                                                    required="{Boolean}true"
                                                    rootPath="/content"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </resourceSectionLinks>
                            <addOptionalResourceSections
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                fieldLabel="Add Optional Resource Sections">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    acs-commons-nested=""
                                    name="./resourceSections">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <sectionLabel
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Enter Optional Resource Section Label"
                                                    fieldLabel="Section Label"
                                                    maxlength="{Long}40"
                                                    name="./sectionLabel"/>
                                                <sectionDescription
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Enter Optional Resource Section Description"
                                                    fieldLabel="Section Description"
                                                    name="./sectionDescription"/>
                                                <resourceLinks
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/multifield"
                                                    fieldLabel="Add Optional Resource Links">
                                                    <field
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                                        acs-commons-nested=""
                                                        name="./resourceLinks">
                                                        <layout
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                            method="absolute"/>
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <column
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <resourceType
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                                                        deleteHint="{Boolean}false"
                                                                        fieldDescription="Select the resource type"
                                                                        fieldLabel="Resource Type"
                                                                        name="./resourceType"
                                                                        value="">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <internal
                                                                                jcr:primaryType="nt:unstructured"
                                                                                text="Internal Link"
                                                                                value="internal"/>
                                                                            <external
                                                                                jcr:primaryType="nt:unstructured"
                                                                                text="External Link"
                                                                                value="external"/>
                                                                            <download
                                                                                jcr:primaryType="nt:unstructured"
                                                                                text="Download Link"
                                                                                value="download"/>
                                                                        </items>
                                                                    </resourceType>
                                                                    <resourceLabel
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                        fieldDescription="Enter Resource Label"
                                                                        fieldLabel="Resource Label"
                                                                        maxlength="{Long}40"
                                                                        name="./resourceLabel"/>
                                                                    <destinationUrl
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                                        fieldDescription="Enter Resource Destination URL"
                                                                        fieldLabel="Destination URL"
                                                                        name="./destinationUrl"
                                                                        rootPath="/content"/>
                                                                </items>
                                                            </column>
                                                        </items>
                                                    </field>
                                                </resourceLinks>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </addOptionalResourceSections>
                        </items>
                    </columns>
                </items>
            </tab2>
        </items>
    </content>
</jcr:root>
