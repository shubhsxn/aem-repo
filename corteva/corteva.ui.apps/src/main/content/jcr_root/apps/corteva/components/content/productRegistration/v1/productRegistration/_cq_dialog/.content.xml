<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Product Registration"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Product Registration"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter a title for the registration list"
                                fieldLabel="Title"
                                maxlength="{Long}30"
                                name="./title"
                                required="{Boolean}true"/>
                            <overviewText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldDescription="Enter optional introductory text for the registration list"
                                fieldLabel="Overview Text"
                                maxlength="{Long}200"
                                name="./overviewText"/>
                            <registrationCounry
                                granite:class="cq-dialog-dropdown-showhide"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Select the country for which to configure the registration list"
                                fieldLabel="Registration Country"
                                multiple="{Boolean}false"
                                name="./registrationCounry"
                                required="{Boolean}true">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-dialog-dropdown-showhide-target=".country-option-listfrom-showhide-target"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <country1
                                        jcr:primaryType="nt:unstructured"
                                        text="US"
                                        value="us"/>
                                    <country2
                                        jcr:primaryType="nt:unstructured"
                                        text="Canada"
                                        value="ca"/>
                                    <country3
                                        jcr:primaryType="nt:unstructured"
                                        text="Brazil"
                                        value="br"/>
                                </items>
                            </registrationCounry>
                            <setProdCountryUS
                                cq:hideOnEdit="{Boolean}true"
                                granite:class="hide country-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="country-option-listtype-showhide-target foundation-layout-util-vmargin">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="us"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <registrationStateListUS
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                        allowBulkEdit="{Boolean}true"
                                        autocreateTag="{Boolean}true"
                                        fieldLabel="Registration List "
										fieldDescription="Select the taxonomy path in case of non agrian product "
                                        multiple="{Boolean}true"
                                        name="./cq:stateListUS"
                                        rootPath="/etc/tags/corteva/regionCountryState/NA/US"/>
                                </items>
                            </setProdCountryUS>
                            <setProdCountryCA
                                cq:hideOnEdit="{Boolean}true"
                                granite:class="hide country-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="ca"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <registrationStateListCA
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                        allowBulkEdit="{Boolean}true"
                                        autocreateTag="{Boolean}true"
                                        fieldLabel="Registration List "
										fieldDescription="Select the taxonomy path in case of non agrian product "
                                        multiple="{Boolean}true"
                                        name="./cq:stateListCA"
                                        rootPath="/etc/tags/corteva/regionCountryState/NA/CA"/>
                                </items>
                            </setProdCountryCA>
                            <setProdCountryBR
                                cq:hideOnEdit="{Boolean}true"
                                granite:class="hide country-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="br"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <registrationStateListBR
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                        allowBulkEdit="{Boolean}true"
                                        autocreateTag="{Boolean}true"
                                        fieldLabel="Registration List "
										fieldDescription="Select the taxonomy path in case of non agrian product "
                                        multiple="{Boolean}true"
                                        name="./cq:stateListBR"
                                        rootPath="/etc/tags/corteva/regionCountryState/LA/BR"/>
                                </items>
                            </setProdCountryBR>
                        </items>
                    </columns>
                </items>
            </tab1>
        </items>
    </content>
</jcr:root>
