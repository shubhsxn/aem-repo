<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0"
	xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	jcr:primaryType="nt:unstructured"
	jcr:title="Fixed Grid Tiles Container"
	sling:resourceType="cq/gui/components/authoring/dialog">
	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/foundation/container">
		<layout jcr:primaryType="nt:unstructured"
			sling:resourceType="granite/ui/components/foundation/layouts/tabs"
			type="nav" />
		<items jcr:primaryType="nt:unstructured">
			<tab1 jcr:primaryType="nt:unstructured"
				jcr:title="Container Settings"
				sling:resourceType="granite/ui/components/foundation/container">
				<layout jcr:primaryType="nt:unstructured"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<columns jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<componentType jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/select"
								class="cq-dialog-custom-dropdown-showhide custom-parent-selector"
								cq-dialog-dropdown-showhide-target=".componentSelection-option-listtype-showhide-target"
								fieldDescription="Select the Component Type"
								fieldLabel="Component Type" name="./viewType" value="">
								<items jcr:primaryType="nt:unstructured">
									<fixedGridTiles
										jcr:primaryType="nt:unstructured"
										text="Fixed Grid Tiles- CON-01" value="fixedGridTiles" />
									<blogLandingHeader
										jcr:primaryType="nt:unstructured"
										text="Blog Landing Header - CON-19" value="blogLandingHeader" />
								</items>
							</componentType>
							<layout jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/select"
								class="cq-dialog-custom-dropdown-showhide custom-parent-selector"
								cq-dialog-dropdown-showhide-target=".layoutSelection-option-listtype-showhide-target"
								fieldDescription="Select the Tiles Layout."
								fieldLabel="Tiles Layout" name="./layout" value="">
								<items jcr:primaryType="nt:unstructured">
									<threeRows jcr:primaryType="nt:unstructured"
										text="3x3" value="threeRows" />
									<twoRows jcr:primaryType="nt:unstructured" text="3x2"
										value="twoRows" />
                                    <oneRows
                                        jcr:primaryType="nt:unstructured"
                                        text="3x1"
                                        value="oneRow"/>
								</items>
							</layout>
							<setThreeRowsLayout
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="layoutSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="threeRows">
								<items jcr:primaryType="nt:unstructured">
									<expandedTilesNumber
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/select"
										class="cq-dialog-custom-dropdown-showhide custom-dynamic-limit-selector"
										cq-dialog-dropdown-showhide-target=".expTilesSelection-option-listtype-showhide-target"
										fieldDescription="Select the number of expanded impact tiles in three rows layout"
										fieldLabel="Number of Expanded Impact Tiles"
										name="./threeRowsExpandedTilesNumber" value="">
										<items jcr:primaryType="nt:unstructured">
											<two jcr:primaryType="nt:unstructured" maxItems="5"
												minitems="5" text="Two" value="2" />
											<one jcr:primaryType="nt:unstructured" maxItems="7"
												minitems="7" text="One" value="1" />
										</items>
									</expandedTilesNumber>
								</items>
							</setThreeRowsLayout>
							<setTwoRowsLayout
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="layoutSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="twoRows">
								<items jcr:primaryType="nt:unstructured">
									<expandedTilesNumber
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/select"
										class="cq-dialog-custom-dropdown-showhide custom-dynamic-limit-selector"
										cq-dialog-dropdown-showhide-target=".expTilesSelection-option-listtype-showhide-target"
										fieldDescription="Select the number of expanded impact tiles in two rows layout"
										fieldLabel="Number of Expanded Impact Tiles"
										name="./twoRowsExpandedTilesNumber" value="">
										<items jcr:primaryType="nt:unstructured">
											<two jcr:primaryType="nt:unstructured" maxItems="2"
												minitems="2" text="Two" value="2" />
											<one jcr:primaryType="nt:unstructured" maxItems="4"
												minitems="4" text="One" value="1" />
											<zero jcr:primaryType="nt:unstructured" maxItems="6"
												minitems="6" text="Zero" value="0" />
										</items>
									</expandedTilesNumber>
								</items>
							</setTwoRowsLayout>
                            <setOneRowLayout
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="layoutSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
                                showhidecustomtargetvalue="oneRow">
                                <items jcr:primaryType="nt:unstructured">
                                    <expandedTilesNumber
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        class="cq-dialog-custom-dropdown-showhide custom-dynamic-limit-selector"
                                        cq-dialog-dropdown-showhide-target=".expTilesSelection-option-listtype-showhide-target"
                                        fieldDescription="Select the number of expanded impact tiles in one rows layout"
                                        fieldLabel="Number of Expanded Impact Tiles"
                                        name="./oneRowExpandedTilesNumber"
                                        value="">
                                        <items jcr:primaryType="nt:unstructured">
                                            <one
                                                jcr:primaryType="nt:unstructured"
                                                maxItems="1"
                                                minitems="1"
                                                text="One"
                                                value="1"/>
                                            <zero
                                                jcr:primaryType="nt:unstructured"
                                                maxItems="3"
                                                minitems="3"
                                                text="Zero"
                                                value="0"/>
                                        </items>
                                    </expandedTilesNumber>
                                </items>
                            </setOneRowLayout>
							<setTitleForFixedgrid
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="componentSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="fixedGridTiles">
								<items jcr:primaryType="nt:unstructured">
									<title jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"
										class="isMandatory" fieldLabel="Grid Title"
										maxlength="{Long}130" name="./title" required="{Boolean}true" />
								</items>
							</setTitleForFixedgrid>
							<setTitleForBlogHeader
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="componentSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="blogLandingHeader">
								<items jcr:primaryType="nt:unstructured">
									<shortTitle jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"
										class="isMandatory" fieldLabel="Title" maxlength="{Long}30"
										name="./shortTitle" required="{Boolean}true" />
								</items>
							</setTitleForBlogHeader>
							<bodyText jcr:primaryType="nt:unstructured"
								sling:resourceType="cq/gui/components/authoring/dialog/richtext"
								fieldLabel="Grid Body Text" name="./bodyText"
								useFixedInlineToolbar="{Boolean}true">
								<rtePlugins jcr:primaryType="nt:unstructured">
									<format jcr:primaryType="nt:unstructured" features="*" />
									<justify jcr:primaryType="nt:unstructured" features="*" />
									<lists jcr:primaryType="nt:unstructured" features="*" />
									<paraformat jcr:primaryType="nt:unstructured"
										features="*" />
									<links jcr:primaryType="nt:unstructured" features="*" />
									<image jcr:primaryType="nt:unstructured" features="*" />
									<findreplace jcr:primaryType="nt:unstructured"
										features="*" />
									<subsuperscript
										jcr:primaryType="nt:unstructured" features="*" />
									<spellcheck jcr:primaryType="nt:unstructured"
										features="*" />
									<misctools jcr:primaryType="nt:unstructured"
										features="*">
										<specialCharsConfig
											jcr:primaryType="nt:unstructured">
											<chars jcr:primaryType="nt:unstructured">
												<copyright jcr:primaryType="nt:unstructured"
													entity="&amp;#169;" />
												<trademark jcr:primaryType="nt:unstructured"
													entity="&amp;#8482;" />
												<registered jcr:primaryType="nt:unstructured"
													entity="&amp;#174;" />
												<emDash jcr:primaryType="nt:unstructured"
													entity="&amp;#8212;" />
												<pound jcr:primaryType="nt:unstructured"
													entity="&amp;#163;" />
												<nbsp jcr:primaryType="nt:unstructured"
													entity="&amp;#160;" />
											</chars>
										</specialCharsConfig>
									</misctools>
									<styles jcr:primaryType="nt:unstructured" features="*">
										<styles jcr:primaryType="nt:unstructured">
											<plainSpan jcr:primaryType="nt:unstructured"
												cssName="defaultSpan" text="Default (add span tag)" />
											<lead jcr:primaryType="nt:unstructured" cssName="lead"
												text="Lead" />
										</styles>
									</styles>
									<table jcr:primaryType="nt:unstructured" features="*" />
								</rtePlugins>
								<uiSettings jcr:primaryType="nt:unstructured">
									<cui jcr:primaryType="nt:unstructured">
										<inline jcr:primaryType="nt:unstructured"
											toolbar="[format#bold,format#italic,format#underline,#justify,#lists,subsuperscript#subscript,subsuperscript#superscript,links#modifylink,links#unlink,links#anchor,#image,findreplace#find,findreplace#replace,spellcheck#checktext,misctools#specialchars,misctools#sourceedit,#styles,#paraformat,table#table]">
											<popovers jcr:primaryType="nt:unstructured">
												<justify jcr:primaryType="nt:unstructured"
													items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
													ref="justify" />
												<lists jcr:primaryType="nt:unstructured"
													items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
													ref="lists" />
												<paraformat jcr:primaryType="nt:unstructured"
													items="paraformat:getFormats:paraformat-pulldown"
													ref="paraformat" />
												<styles jcr:primaryType="nt:unstructured"
													items="styles:getStyles:styles-pulldown" ref="styles" />
											</popovers>
										</inline>
									</cui>
								</uiSettings>
								<htmlRules jcr:primaryType="nt:unstructured">
									<docType jcr:primaryType="nt:unstructured">
										<typeConfig jcr:primaryType="nt:unstructured"
											useSemanticMarkup="{Boolean}true">
											<semanticMarkupMap
												jcr:primaryType="nt:unstructured" 
												b="strong" 
												i="em"/>
										</typeConfig>
									</docType>
								</htmlRules>
							</bodyText>
						</items>
					</columns>
				</items>
			</tab1>
			<tab2 jcr:primaryType="nt:unstructured"
				jcr:title="Tiles Configuration"
				sling:resourceType="granite/ui/components/foundation/container">
				<layout jcr:primaryType="nt:unstructured"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<columns jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<setExpandedImpactFirstTile
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="expTilesSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="2, 1">
								<items jcr:primaryType="nt:unstructured">
									<expandedImpactFirstTilePath
										jcr:primaryType="nt:unstructured"
										sling:resourceType="corteva/components/content/contextualpathbrowser"
										cardView="tileImpactExpanded" class="expfragPath isMandatory"
										fieldLabel="First Expanded Impact Tile Path"
										name="./expandedImpactFirstTilePath" required="{Boolean}true"
										rootPath="" />
								</items>
							</setExpandedImpactFirstTile>
							<impactTilesPaths
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/multifield"
								class="dynamic-limit-validation-multifield"
								fieldLabel="Impact Tiles Paths" maxItems="" minItems="">
								<field jcr:primaryType="nt:unstructured"
									sling:resourceType="granite/ui/components/foundation/form/fieldset"
									acs-commons-nested="" name="./impactTilesPaths">
									<layout jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
										method="absolute" />
									<items jcr:primaryType="nt:unstructured">
										<column jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/foundation/container">
											<items jcr:primaryType="nt:unstructured">
												<impactTilePath
													jcr:primaryType="nt:unstructured"
													sling:resourceType="corteva/components/content/contextualpathbrowser"
													cardView="tileImpact" class="expfragPath"
													fieldLabel="Impact Tile Path" name="./impactTilePath"
													required="{Boolean}true" rootPath="" />
											</items>
										</column>
									</items>
								</field>
							</impactTilesPaths>
							<setExpandedImpactLastTile
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="expTilesSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="2">
								<items jcr:primaryType="nt:unstructured">
									<expandedImpactLastTilePath
										jcr:primaryType="nt:unstructured"
										sling:resourceType="corteva/components/content/contextualpathbrowser"
										cardView="tileImpactExpanded" class="expfragPath isMandatory"
										fieldLabel="Last Expanded Impact Tile Path"
										name="./expandedImpactLastTilePath" required="{Boolean}true"
										rootPath="" />
								</items>
							</setExpandedImpactLastTile>
							<fixedGridHidden
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/hidden"
								name="./fixedGridHidden" />
						</items>
					</columns>
				</items>
			</tab2>
		</items>
	</content>
</jcr:root>
