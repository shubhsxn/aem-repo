<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Article Filter"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        class="articlefilter"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Article Filter"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <feedTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Enter Feed Title"
                                fieldLabel="Feed Title"
                                maxlength="{Long}25"
                                name="./feedTitle"
                                required="{Boolean}true"/>
                            <articleType
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                emptyText="Select"
                                fieldLabel="Select Article Type"
                                multiple="{Boolean}true"
                                name="./articleType"
                                required="{Boolean}true">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="corteva/components/content/DataSource/ArticleTypeList"/>
                            </articleType>
                            <articleTopics
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Article Topics">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                    name="./articleTopics">
                                    <items jcr:primaryType="nt:unstructured">
                                        <articleFacet
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            emptyText="Select"
                                            fieldLabel="Select Article Facet"
                                            name="./articleFacet"
                                            required="{Boolean}true">
                                            <datasource
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="corteva/components/content/DataSource/FacetTypeList"/>
                                        </articleFacet>
                                        <facetTags
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                            allowBulkEdit="{Boolean}true"
                                            autocreateTag="{Boolean}true"
                                            fieldDescription="Please select child tags from the selected facet."
                                            fieldLabel="Facet Tags"
                                            multiple="{Boolean}true"
                                            name="./cq:facetTags"
                                            required="true"
                                            rootPath="/etc/tags/corteva"/>
                                    </items>
                                </field>
                            </articleTopics>
                            <intraFacetLogicalOperation
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Logical operation within Facets in Article Topics taxonomy"
                                name="./intraFacetLogicalOperation"
                                required="{Boolean}true"
                                value="">
                                <items jcr:primaryType="nt:unstructured">
                                    <or
                                        jcr:primaryType="nt:unstructured"
                                        text="OR"
                                        value="or"/>
                                    <and
                                        jcr:primaryType="nt:unstructured"
                                        text="AND"
                                        value="and"/>
                                </items>
                            </intraFacetLogicalOperation>
                            <interFacetLogicalOperation
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Logical operation across Facets in Article Topics taxonomy"
                                name="./interFacetLogicalOperation"
                                required="{Boolean}true"
                                value="">
                                <items jcr:primaryType="nt:unstructured">
                                    <and
                                        jcr:primaryType="nt:unstructured"
                                        text="AND"
                                        value="and"/>
                                    <or
                                        jcr:primaryType="nt:unstructured"
                                        text="OR"
                                        value="or"/>
                                </items>
                            </interFacetLogicalOperation>
                            <displayFilterSection
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}true"
                                fieldDescription="Show Filter Section"
                                name="./displayFilterSection"
                                text="Show Filter Section"
                                uncheckedValue="false"
                                class="isMandatoryCheck"
                                requiredtocheck="displayFilterLabel"
                                value="true"/>
                            <filterAttributes
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="filtersection">
                                <items jcr:primaryType="nt:unstructured">
                                    <filterLabel
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldDescription="Enter Filter Label"
                                        fieldLabel="Filter Label"
                                        maxlength="{Long}20"
                                        name="./filterLabel"
                                        requiredtocheck="displayFilterLabel"
                                        required="{Boolean}true"/>
                                    <displayArticleTypeFilter
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                        defaultChecked="{Boolean}true"
                                        fieldDescription="Show Article Type Filter"
                                        name="./displayArticleTypeFilter"
                                        text="Show Article Type Filter"
                                        uncheckedValue="false"
                                        value="true"/>
                                    <displayDateFilter
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                        defaultChecked="{Boolean}true"
                                        fieldDescription="Show Date Filters"
                                        name="./displayDateFilter"
                                        text="Show Date Filters"
                                        uncheckedValue="false"
                                        value="true"/>
                                </items>
                            </filterAttributes>
                            <displayArticleTypeLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}true"
                                fieldDescription="Show Article Type Label"
                                name="./displayArticleTypeLabel"
                                text="Show Article Type Label"
                                uncheckedValue="false"
                                value="true"/>
                            <displayDate
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}true"
                                fieldDescription="Show Date"
                                name="./displayDate"
                                text="Show Date"
                                uncheckedValue="false"
                                value="true"/>
                        </items>
                    </columns>
                </items>
            </tab1>
        </items>
    </content>
</jcr:root>
