<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0"
	xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	jcr:primaryType="nt:unstructured" jcr:title="Primary Card"
	sling:resourceType="cq/gui/components/authoring/dialog">
	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/foundation/container">
		<layout jcr:primaryType="nt:unstructured"
			sling:resourceType="granite/ui/components/foundation/layouts/tabs"
			type="nav" />
		<items jcr:primaryType="nt:unstructured">
			<tab1 jcr:primaryType="nt:unstructured"
				jcr:title="Primary Card Settings"
				sling:resourceType="granite/ui/components/foundation/container">
				<layout jcr:primaryType="nt:unstructured"
					sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				<items jcr:primaryType="nt:unstructured">
					<columns jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<viewType jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/select"
								fieldDescription="Select the Card Type."
								fieldLabel="Select the Card Type"
								class="cq-dialog-custom-dropdown-showhide"
								cq-dialog-dropdown-showhide-target=".viewSelection-option-listtype-showhide-target"
								name="./viewType" value="">
								<items jcr:primaryType="nt:unstructured">
									<simpleCard jcr:primaryType="nt:unstructured"
										text="Simple Card" value="simpleCard" />
									<featureCard jcr:primaryType="nt:unstructured"
										text="Feature Card" value="featureCard" />
									<callToActionCard
										jcr:primaryType="nt:unstructured" text="Call To Action Card"
										value="callToActionCard" />
									<callToActionArrowCard
										jcr:primaryType="nt:unstructured"
										text="Tile Quarter Width Full Bleed"
										value="callToActionArrowCard" />
									<responsiveCard
										jcr:primaryType="nt:unstructured" text="Responsive Card"
										value="responsiveCard" />
								</items>
							</viewType>
							<setImage jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								assetfieldstobepopulated="\{&quot;imageAltText&quot;:&quot;./altText&quot;}"
								class="assetMetadataClass">
								<items jcr:primaryType="nt:unstructured">
									<smartImage jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/include"
										path="/apps/corteva/components/content/commonElements/image/smartimage"
										required="{Boolean}true" />
									<altText jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/include"
										path="/apps/corteva/components/content/commonElements/image/alttext" />
								</items>
							</setImage>
							<setSimpleCard jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="viewSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="simpleCard">
								<items jcr:primaryType="nt:unstructured">
									<cardTitle jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"
										class="isMandatory" fieldDescription="Card Title"
										fieldLabel="Card Title" maxlength="{Long}32"
										name="./simpleCardTitle" required="{Boolean}true" />
								</items>
							</setSimpleCard>
							<setFeatureCard jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="viewSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="featureCard">
								<items jcr:primaryType="nt:unstructured">
									<cardTitle jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"
										class="isMandatory" fieldDescription="Card Title"
										fieldLabel="Card Title" maxlength="{Long}45"
										name="./featureCardTitle" required="{Boolean}true" />
									<mobsmartimage jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/fileupload"
										allowUpload="{Boolean}false" autoStart="{Boolean}false"
										class="cq-droptarget isMandatory" fieldLabel="Mobile Image asset"
										fileNameParameter="./mobfileName"
										fileReferenceParameter="./mobfileReference"
										mimeTypes="[image]" multiple="{Boolean}false" name="./mobfile"
										required="{Boolean}true" title="Upload Mobile Image Asset"
										uploadUrl="${suffix.path}" useHTML5="{Boolean}true" />
								</items>
							</setFeatureCard>
							<setCallToActionCard
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="viewSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="callToActionCard">
								<items jcr:primaryType="nt:unstructured">
									<cardTitle jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"
										class="isMandatory" fieldDescription="Card Title"
										fieldLabel="Card Title" maxlength="{Long}20"
										name="./ctaCardTitle" required="{Boolean}true" />
								</items>
							</setCallToActionCard>
							<setCallToActionArrowCard
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="viewSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="callToActionArrowCard">
								<items jcr:primaryType="nt:unstructured">
									<cardTitle jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"
										class="isMandatory" fieldDescription="Card Title"
										fieldLabel="Card Title" maxlength="{Long}66"
										name="./ctaArrowCardTitle" required="{Boolean}true" />
								</items>
							</setCallToActionArrowCard>
							<setResponsiveCard
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="viewSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="responsiveCard">
								<items jcr:primaryType="nt:unstructured">
									<cardTitle jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"
										class="isMandatory" fieldDescription="Card Title"
										fieldLabel="Card Title" maxlength="{Long}45"
										name="./responsiveCardTitle" required="{Boolean}true" />
								</items>
							</setResponsiveCard>
							<bodyTextSection
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="viewSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="simpleCard, featureCard, responsiveCard">
								<items jcr:primaryType="nt:unstructured">
									<bodyText jcr:primaryType="nt:unstructured"
										sling:resourceType="cq/gui/components/authoring/dialog/richtext"
										allowBlank="{Boolean}false" class="isMandatory"
										fieldLabel="Body Text" name="./bodyText"
										required="{Boolean}true" useFixedInlineToolbar="{Boolean}true">
										<rtePlugins jcr:primaryType="nt:unstructured">
											<format jcr:primaryType="nt:unstructured" features="*" />
											<justify jcr:primaryType="nt:unstructured"
												features="*" />
											<lists jcr:primaryType="nt:unstructured" features="*" />
											<paraformat jcr:primaryType="nt:unstructured"
												features="*" />
											<links jcr:primaryType="nt:unstructured" features="*" />
											<image jcr:primaryType="nt:unstructured" features="*" />
											<findreplace jcr:primaryType="nt:unstructured"
												features="*" />
											<subsuperscript
												jcr:primaryType="nt:unstructured" features="*" />
											<spellcheck jcr:primaryType="nt:unstructured"
												features="*" />
											<misctools jcr:primaryType="nt:unstructured"
												features="*">
												<specialCharsConfig
													jcr:primaryType="nt:unstructured">
													<chars jcr:primaryType="nt:unstructured">
														<copyright jcr:primaryType="nt:unstructured"
															entity="&amp;#169;" />
														<trademark jcr:primaryType="nt:unstructured"
															entity="&amp;#8482;" />
														<registered jcr:primaryType="nt:unstructured"
															entity="&amp;#174;" />
														<emDash jcr:primaryType="nt:unstructured"
															entity="&amp;#8212;" />
														<pound jcr:primaryType="nt:unstructured"
															entity="&amp;#163;" />
														<nbsp jcr:primaryType="nt:unstructured"
															entity="&amp;#160;" />
													</chars>
												</specialCharsConfig>
											</misctools>
											<styles jcr:primaryType="nt:unstructured" features="*">
												<styles jcr:primaryType="nt:unstructured">
													<plainSpan jcr:primaryType="nt:unstructured"
														cssName="defaultSpan" text="Default (add span tag)" />
													<lead jcr:primaryType="nt:unstructured" cssName="lead"
														text="Lead" />
												</styles>
											</styles>
											<table jcr:primaryType="nt:unstructured" features="*" />
										</rtePlugins>
										<uiSettings jcr:primaryType="nt:unstructured">
											<cui jcr:primaryType="nt:unstructured">
												<inline jcr:primaryType="nt:unstructured"
													toolbar="[format#bold,format#italic,format#underline,#justify,#lists,subsuperscript#subscript,subsuperscript#superscript,links#modifylink,links#unlink,links#anchor,#image,findreplace#find,findreplace#replace,spellcheck#checktext,misctools#specialchars,misctools#sourceedit,#styles,#paraformat,table#table]">
													<popovers jcr:primaryType="nt:unstructured">
														<justify jcr:primaryType="nt:unstructured"
															items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
															ref="justify" />
														<lists jcr:primaryType="nt:unstructured"
															items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
															ref="lists" />
														<paraformat jcr:primaryType="nt:unstructured"
															items="paraformat:getFormats:paraformat-pulldown"
															ref="paraformat" />
														<styles jcr:primaryType="nt:unstructured"
															items="styles:getStyles:styles-pulldown" ref="styles" />
													</popovers>
												</inline>
											</cui>
										</uiSettings>
										<htmlRules jcr:primaryType="nt:unstructured">
											<docType jcr:primaryType="nt:unstructured">
												<typeConfig jcr:primaryType="nt:unstructured"
													useSemanticMarkup="{Boolean}true">
													<semanticMarkupMap
														jcr:primaryType="nt:unstructured" 
														b="strong" 
														i="em"/>
												</typeConfig>
											</docType>
										</htmlRules>
									</bodyText>
								</items>
							</bodyTextSection>
							<linkLabelSection
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="viewSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="simpleCard, featureCard">
								<items jcr:primaryType="nt:unstructured">
									<linkLabel jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"
										fieldDescription="Enter Link Label." fieldLabel="Link Label"
										maxlength="{Long}100" name="./linkLabel" />
								</items>
							</linkLabelSection>
							<optionalLinkSection
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="viewSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="responsiveCard">
								<items jcr:primaryType="nt:unstructured">
									<linkLabel jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"
										fieldDescription="Enter Link Label." fieldLabel="Link Label"
										maxlength="{Long}100" name="./optLinkLabel" />
									<linkUrl jcr:primaryType="nt:unstructured"
										sling:resourceType="corteva/components/content/contextualpathbrowser"
										fieldDescription="Provide the Destination Link."
										fieldLabel="Link URL" name="./optLinkUrl"
											 contentRootPath="/content" />
									<linkAction jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/select"
										fieldDescription="Choose Target Action for Link."
										fieldLabel="Link Action" name="./optLinkAction">
										<items jcr:primaryType="nt:unstructured">
											<option1 jcr:primaryType="nt:unstructured"
												selected="{Boolean}true" text="Open in same window"
												value="_self" />
											<option2 jcr:primaryType="nt:unstructured"
												text="Open in new window" value="_blank" />
										</items>
									</linkAction>
									<linkStyle jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/select"
										fieldDescription="Link Style" fieldLabel="Link Style"
										name="./optLinkStyle">
										<items jcr:primaryType="nt:unstructured">
											<internal jcr:primaryType="nt:unstructured"
												text="Internal Link" value="internal" />
											<external jcr:primaryType="nt:unstructured"
												text="External Link" value="external" />
											<download jcr:primaryType="nt:unstructured"
												text="Download Link" value="download" />
										</items>
									</linkStyle>
								</items>
							</optionalLinkSection>
							<linkAttributesSection
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="viewSelection-option-listtype-showhide-target foundation-layout-util-vmargin"
								showhidecustomtargetvalue="simpleCard, featureCard, callToActionCard, callToActionArrowCard">
								<items jcr:primaryType="nt:unstructured">
									<linkUrl jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/include"
										path="/apps/corteva/components/content/commonElements/link/linkUrl" />
									<linkAction jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/include"
										path="/apps/corteva/components/content/commonElements/link/linkAction" />
									<linkStyle jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/include"
										path="/apps/corteva/components/content/commonElements/link/linkStyle" />
								</items>
							</linkAttributesSection>
						</items>
					</columns>
				</items>
			</tab1>
		</items>
	</content>
</jcr:root>
