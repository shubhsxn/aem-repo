<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Product Label"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
		jcr:title="Product Label Settings"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
			<section
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/section">
				 <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
							<columns
								jcr:primaryType="nt:unstructured"
								jcr:title="Non US Product Labels Configuration"
								sling:resourceType="granite/ui/components/foundation/container">
								<layout
									jcr:primaryType="nt:unstructured"
									sling:resourceType="granite/ui/components/foundation/layouts/collapsible"/>
								<items jcr:primaryType="nt:unstructured">
									<productDocumentConfig
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
										composite="{Boolean}true"
										fieldLabel="Product Document Configuration">
										<field
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
											name="./productDocumentConfig">
											<items jcr:primaryType="nt:unstructured">
												<productDocumentLabel
													jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Product Document Label"
                                                    fieldLabel="Product Document Label"
													required="{Boolean}true"
                                                    name="./productDocumentLabel"/>
                                                <productDocumentLink
													jcr:primaryType="nt:unstructured"
													sling:resourceType="corteva/components/content/contextualpathbrowser"
													fieldDescription="Product Document Link"
													fieldLabel="Product Document Link"
													required="{Boolean}true"
													contentRootPath="/content/dam/dpagco"
													name="./productDocumentLink"/>
											</items>
										</field>
									</productDocumentConfig>
									<productDisplayDate
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
										fieldDescription="Display Date for Product Document."
										text="Display Date for Product Document?"
										checked="true"
										uncheckedValue="false"
										value="{Boolean}true"
										name="./productDisplayDate"/>
									<safetyDocumentConfig
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
										composite="{Boolean}true"
										fieldLabel="Safety Document Configuration">
										<field
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
											name="./safetyDocumentConfig">
											<items jcr:primaryType="nt:unstructured">
												<safetyDocumentLabel
													jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Safety Document Label"
                                                    fieldLabel="Safety Document Label"
													required="{Boolean}true"
                                                    name="./safetyDocumentLabel"/>
												<safetyDocumentLink
													jcr:primaryType="nt:unstructured"
													sling:resourceType="corteva/components/content/contextualpathbrowser"
													fieldDescription="MSDS Document Link"
													fieldLabel="MSDS Document Link"
													required="{Boolean}true"
													contentRootPath="/content/dam/dpagco"
													name="./safetyDocumentLink"/>
											</items>
										</field>
									</safetyDocumentConfig>
									<safetyDisplayDate
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
										fieldDescription="Display Date for Safety Document."
										text="Display Date for Safety Document?"
										checked="true"
										uncheckedValue="false"
										value="{Boolean}true"
										name="./safetyDisplayDate"/>
									<setOptionalText
										jcr:primaryType="nt:unstructured"
										jcr:title="Optional Information"
										sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
										name="./optionalBodyText">
										<items jcr:primaryType="nt:unstructured">
											<column
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/container">
												<items jcr:primaryType="nt:unstructured">
													<optionalText
														jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/foundation/include"
														path="/apps/corteva/components/content/commonElements/optionalBodytext"/>
												</items>
											</column>
                                        </items>
                                    </setOptionalText>
									 <hideLabelFinderUrl
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                        defaultChecked="{Boolean}false"
                                        fieldDescription="Hide Label Finder Url"
                                        name="./hideLabelFinderUrl"
                                        text="Hide Label Finder Url"
                                        uncheckedValue="false"
                                        value="true"/>
								</items>
							</columns>
						</items>
					</column>
                </items>
            </section>
        </items>
    </content>
</jcr:root>
