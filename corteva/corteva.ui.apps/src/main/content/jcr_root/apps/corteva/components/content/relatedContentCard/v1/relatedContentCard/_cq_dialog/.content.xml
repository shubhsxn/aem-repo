<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Related Content Card"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Related Content Card Settings"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured"> 
							<pagePath
                                 jcr:primaryType="nt:unstructured"
                                 sling:resourceType="corteva/components/content/contextualpathbrowser"
                                 fieldLabel="Select Page Path"
                                 fieldDescription="Select the page path."
                                 name="./pagePath"
                                 required="{Boolean}true"
                                 fieldstobepopulated="\{&quot;jcr:title&quot;:&quot;./title&quot;}"
                                 imagetobepopulated="\{&quot;primaryImage&quot;:&quot;./fileReference&quot;}"
                                 class="js-page-populate"
								 contentRootPath="/content"/>
							<title
								 jcr:primaryType="nt:unstructured"
								 sling:resourceType="granite/ui/components/foundation/form/textfield"
							     fieldDescription="Page Title"
							 	 fieldLabel="Page Title"
								 name="./title"
								 required="{Boolean}true"/>
							<setImage
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container"
								class="assetMetadataClass"
								assetfieldstobepopulated="\{&quot;imageAltText&quot;:&quot;./altText&quot;}">
								<items jcr:primaryType="nt:unstructured">
                          			<image
                                 		jcr:primaryType="nt:unstructured"
                                 		sling:resourceType="granite/ui/components/foundation/include"
                                 		path="/apps/corteva/components/content/commonElements/image/smartimage"/>
                        			<altText
                                 		jcr:primaryType="nt:unstructured"
                                 		sling:resourceType="granite/ui/components/foundation/include"
                                 		path="/apps/corteva/components/content/commonElements/image/alttext"/>
                                 </items>
                             </setImage>
						</items>
                    </columns>
                </items>
            </tab1>
        </items>
    </content>
</jcr:root>
