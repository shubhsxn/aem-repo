<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Column Control"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <colctrl
                jcr:primaryType="nt:unstructured"
                jcr:title="Column control"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <coltype
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="select the type of column control to generate. Note: once columns are generated they cannot be re-generated."
                                fieldLabel="Column type"
                                name="./coltype">
                                <items jcr:primaryType="nt:unstructured">
                                    <col-8-4
                                        jcr:primaryType="nt:unstructured"
                                        text="2 Columns (66|33)"
                                        value="8-4-col"/>
                                    <col-4-8
                                        jcr:primaryType="nt:unstructured"
                                        text="2 Columns (33|66)"
                                        value="4-8-col"/>
                                    <col-4-4-4
                                        jcr:primaryType="nt:unstructured"
                                        text="3 Columns (33|33|33)"
                                        value="4-4-4-col"/>
                                    <col-6-6
                                        jcr:primaryType="nt:unstructured"
                                        text="2 Columns (50|50)"
                                        value="6-6-col"/>
                                    <col-3-3-3-3
                                        jcr:primaryType="nt:unstructured"
                                        text="4 Columns (25|25|25|25)"
                                        value="3-3-3-3-col"/>
                                    <col-3-9
                                        jcr:primaryType="nt:unstructured"
                                        text="2 Columns (25|75)"
                                        value="3-9-col"/>
                                    <col-9-3
                                        jcr:primaryType="nt:unstructured"
                                        text="2 Columns (75|25)"
                                        value="9-3-col"/>
                                    <col-3-3-6
                                        jcr:primaryType="nt:unstructured"
                                        text="3 Columns (25|25|50)"
                                        value="3-3-6-col"/>
                                    <col-6-3-3
                                        jcr:primaryType="nt:unstructured"
                                        text="3 Columns (50|25|25)"
                                        value="6-3-3-col"/>
                                    <col-3-6-3
                                        jcr:primaryType="nt:unstructured"
                                        text="3 Columns (25|50|25)"
                                        value="3-6-3-col"/>
                                    <col-3-8-1
                                        jcr:primaryType="nt:unstructured"
                                        text="3 Columns (25|65|10)"
                                        value="3-8-1-col"/>
                                </items>
                            </coltype>
                            <pageMargin
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                name="./pageMargin"
                                text="Page Margin"
                                value="true"/>
                        </items>
                    </columns>
                </items>
            </colctrl>
        </items>
    </content>
</jcr:root>
