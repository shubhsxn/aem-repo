<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Corteva Icon Metadata"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container"
        class="cq-dialog-content-page">
        <items jcr:primaryType="nt:unstructured">
            <title
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The title for the icon."
                fieldLabel="Icon Title"
                name="./iconTitle"
                required="{Boolean}true">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </title>
            <desc
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The description for the icon."
                fieldLabel="Icon Description"
                name="./iconDescription">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </desc>
            <altText
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The alt text for the icon."
                fieldLabel="Icon ALT Text "
                name="./iconAltText"
                required="{Boolean}true">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </altText>
            <cqTags
                cq:showOnCreate="{Boolean}true"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/common/tagspicker"
                allowCreate="{Boolean}true"
                cq-msm-lockable="cq:tags"
                fieldLabel="Tags"
                metaType="tags"
                name="./cq:tags"
                rootPath="/etc/tags/corteva"/>
            <brandTeamApprover
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="Name of brand team approver."
                fieldLabel="Brand Team Approver"
                name="./brandTeamApprover"
                required="{Boolean}true">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </brandTeamApprover>
            <seo
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The seo keywords for icon."
                fieldLabel="SEO Keywords"
                name="./iconSeoKeywords"
                required="{Boolean}true">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </seo>
        </items>
    </content>
</jcr:root>
