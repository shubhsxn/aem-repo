<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Corteva Image Metadata"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container"
        class="cq-dialog-content-page">
        <items jcr:primaryType="nt:unstructured">
            <title
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The title for the image."
                fieldLabel="Image Title"
                name="./imageTitle"
                required="{Boolean}true">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </title>
            <desc
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                data-title="The description for the image."
                fieldLabel="Image Description"
                name="./imageDescription"
                required="{Boolean}true">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </desc>
            <altText
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The alt text for the image."
                fieldLabel="Image Alt Text"
                name="./imageAltText"
                required="{Boolean}true">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </altText>
            <cqTags
                cq:showOnCreate="{Boolean}true"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/common/tagspicker"
                allowCreate="{Boolean}true"
                cq-msm-lockable="cq:tags"
                fieldLabel="Tags"
                metaType="tags"
                name="./cq:tags"
                rootPath="/etc/tags/corteva"/>
            <imageSource
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Attribution or Source"
                name="./imageSource">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </imageSource>
            <expirationDate
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                data-title="The image expiration date."
                displayedFormat=""
                fieldLabel="Expiration Date"
                name="./imageExpirationDate"
                required="{Boolean}false"
                type="datetime">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="datepicker"
                    typeHint="Date"/>
            </expirationDate>
            <rightsRestrictions
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Rights Restrictions"
                name="./imageRightsRestrictions">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </rightsRestrictions>
            <businessRestrictions
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Business Restrictions"
                name="./imageBusinessRestrictions">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </businessRestrictions>
            <regionalRestrictions
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Regional Restrictions"
                name="./imageRegionalRestrictions">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </regionalRestrictions>
            <product
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Product"
                name="./imageProduct">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </product>
            <seo
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="SEO Keywords"
                name="./imageSeoKeywords">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </seo>
        </items>
    </content>
</jcr:root>
