<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Corteva Logo Metadata"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container"
        class="cq-dialog-content-page">
        <items jcr:primaryType="nt:unstructured">
            <orgName
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                defaultValue=" "
                fieldLabel="Name of Organization"
                name="./logoOrg"
                required="{Boolean}true">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="customtext"/>
            </orgName>
            <desc
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The description for logo."
                fieldLabel="Logo Description"
                name="./logoDescription"
                required="{Boolean}true">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </desc>
            <altText
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The alt text for logo."
                fieldLabel="Logo Alt Text"
                name="./logoAltText"
                required="{Boolean}true">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </altText>
            <cqTags
                cq:showOnCreate="{Boolean}true"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/common/tagspicker"
                allowCreate="{Boolean}true"
                cq-msm-lockable="cq:tags"
                fieldLabel="Tags"
                metaType="tags"
                name="./cq:tags"
                rootPath="/etc/tags/corteva"/>
            <linkLabel
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The cta link label for logo ."
                fieldLabel="CTA Link Label"
                name="./logoCtaLinkLabel">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </linkLabel>
            <linkUrl
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                defaultValue=" "
                fieldLabel="Logo Destination URL"
                name="./logoDestinationUrl">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="custom"/>
            </linkUrl>
            <seo
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The Seo  keywords for logo."
                fieldLabel="SEO Keywords"
                name="./logoSeoKeywords"
                required="{Boolean}true">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </seo>
        </items>
    </content>
</jcr:root>
