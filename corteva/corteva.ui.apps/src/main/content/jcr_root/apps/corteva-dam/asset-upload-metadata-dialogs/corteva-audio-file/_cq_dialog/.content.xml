<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Corteva Audio File Metadata"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container"
        class="cq-dialog-content-page">
        <items jcr:primaryType="nt:unstructured">
            <altText
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The alt text for audio file ."
                fieldLabel="Audio ALT Text "
                name="./audioalttext"
                required="{Boolean}true">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </altText>
            <cqTags
                cq:showOnCreate="{Boolean}true"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/common/tagspicker"
                allowCreate="{Boolean}true"
                cq-msm-lockable="cq:tags"
                fieldLabel="Tags"
                metaType="tags"
                name="./cq:tags"
                rootPath="/etc/tags/corteva"/>
            <transcript
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                defaultValue=" "
                fieldLabel="Transcript"
                name="./audioTranscript">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="customtext"/>
            </transcript>
            <duration
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Duration"
                name="./audioDuration"
                required="{Boolean}true">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </duration>
            <audioSrc
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The source for audio file ."
                fieldLabel="Attribution/Source"
                name="./audioSource">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </audioSrc>
            <expirationDate
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                data-title="The expiration date for audio file."
                displayedFormat="YYYY-MM-DD HH:mm"
                fieldLabel="Expiration Date"
                name="./audioExpirationDate"
                required="{Boolean}true"
                type="datetime">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="datepicker"
                    typeHint="Date"/>
            </expirationDate>
            <rightsRestrictions
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The right restrictions for audio file."
                fieldLabel="Rights Restrictions"
                name="./audiorightrestrictions">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </rightsRestrictions>
            <businessRestrictions
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The business restrictions for audio file."
                fieldLabel="Business Restrictions"
                name="./audioBusinessRestrictions">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </businessRestrictions>
            <regionalRestrictions
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The regional restrictions for audio file."
                fieldLabel="Regional Restrictions"
                name="./audiRegionalRestrictions">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </regionalRestrictions>
            <product
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Product"
                name="./audioProduct">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </product>
            <seo
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                data-title="The seo keywords for audio."
                fieldLabel="SEO Keywords"
                name="./audioSeoKeywords"
                required="{Boolean}true">
                <granite:data
                    jcr:primaryType="nt:unstructured"
                    metaType="text"/>
            </seo>
        </items>
    </content>
</jcr:root>
